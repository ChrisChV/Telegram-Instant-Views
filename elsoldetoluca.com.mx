      @replace_tag(<cite>): $tquote/../next-sibling::p/span[@class="cite"]
      @append_to($tquote/..): $@
    }
    @if($tquote/../span[@class="cite"]){
      @replace_tag(<cite>): $tquote/../span[@class="cite"]
    }

    @append("\""): $tquote/../span
     @prepend("\""): $tquote/../span
     @wrap(<b>): $tquote 
  }
}
  @if($tquote/next-sibling::p/span[@class="cite"]){  
    @wrap(<div>): $tquote   
    @replace_tag(<aside>): $tquote/..
    @replace_tag(<cite>): $tquote/../next-sibling::p/span[@class="cite"]
    @append_to($tquote/..)
